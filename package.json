{
  "name": "Fulcrum",
  "version": "0.0.25",
  "description": "Fulcrum",
  "homepage": "http://github.com/fulcrumapp/fulcrum-desktop",
  "main": "app/index.js",
  "scripts": {
    "test": "node_modules/.bin/mocha ./test/setup.js ./test/test.js",
    "prepublish": "npm run clean && npm run build",
    "lint": "node_modules/.bin/eslint src/**/*.js",
    "build": "node_modules/.bin/babel src --out-dir app --source-maps=inline",
    "watch": "node_modules/.bin/babel src --out-dir app --source-maps=inline --watch",
    "clean": "rm -rf dist",
    "postinstallOLD": "install-app-deps",
    "pack": "build --dir",
    "dist": "build",
    "dist:win": "build --windows --x64 --ia32 --publish always",
    "dist:mac": "build --mac --publish always",
    "dist:linux": "build --linux --x64 --publish always",
    "dist:travis": "build --linux --mac --publish always",
    "mac": "build --mac dir"
  },
  "author": "Zac McCormick <zac.mccormick@gmail.com> (http://github.com/zhm)",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git://github.com/fulcrumapp/fulcrum-desktop.git"
  },
  "eslintConfig": {
    "extends": "fulcrum"
  },
  "build": {
    "appId": "com.spatialnetworks.fulcrum",
    "productName": "Fulcrum",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "app/*",
      "app/**/*",
      "node_modules"
    ],
    "extraFiles": [
      {
        "from": "resources/spatialite/${os}/${arch}",
        "to": ".",
        "filter": [
          "*.dll"
        ]
      },
      {
        "from": "resources/spatialite/${os}/${arch}",
        "to": ".",
        "filter": [
          "*.exe"
        ]
      },
      {
        "from": "resources/spatialite/${os}/${arch}",
        "to": "resources",
        "filter": [
          "*.dylib"
        ]
      },
      {
        "from": "resources/spatialite/${os}/${arch}",
        "to": ".",
        "filter": [
          "*.so"
        ]
      },
      {
        "from": "resources/scripts",
        "to": "scripts",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {},
    "mac": {},
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 420,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "executableName": "fulcrum",
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "fulcrumapp",
        "repo": "fulcrum-desktop"
      }
    ]
  },
  "devDependencies": {
    "@risingstack/v8-profiler": "^5.7.0",
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-node5": "^1.2.0",
    "babel-preset-stage-1": "^6.5.0",
    "chai": "^3.5.0",
    "electron": "^1.6.6",
    "electron-builder": "^17.1.1",
    "electron-rebuild": "^1.1.3",
    "eslint": "^3.17.1",
    "mocha": "^2.4.5",
    "should": "^8.3.1"
  },
  "dependencies": {
    "async": "^2.4.0",
    "babel-plugin-fulcrum-desktop": "^1.0.0",
    "babel-preset-env": "^1.2.2",
    "babel-register": "^6.7.2",
    "bluebird": "^3.3.5",
    "colors": "^1.1.2",
    "commander": "^2.9.0",
    "csv-string": "^2.3.0",
    "ejs": "^2.4.1",
    "electron-log": "^2.2.3",
    "electron-updater": "^1.14.2",
    "eslint-config-fulcrum": "^1.5.4",
    "eslint-plugin-react": "^5.0.1",
    "exif": "^0.6.0",
    "filesize": "^3.3.0",
    "fulcrum-core": "^0.9.19",
    "fulcrum-schema": "fulcrumapp/fulcrum-schema#v2",
    "glob": "^7.1.1",
    "inquirer": "^1.0.2",
    "lodash": "^4.11.1",
    "minidb": "^0.9.1",
    "mixmatch": "0.0.2",
    "mkdirp": "^0.5.1",
    "mv": "^2.1.1",
    "node-uuid": "^1.4.7",
    "pg": "^6.1.5",
    "pg-format": "^1.0.4",
    "progress": "^1.1.8",
    "request": "^2.72.0",
    "rimraf": "^2.5.2",
    "sanitize-filename": "^1.5.3",
    "source-map-support": "^0.4.14",
    "sqldiff": "fulcrumapp/sqldiff#master",
    "uuid": "^2.0.2",
    "yargs": "^7.1.0"
  },
  "keywords": [
    "fulcrum"
  ]
}
